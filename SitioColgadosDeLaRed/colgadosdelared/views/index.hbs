<main class="holder">
    <h2 class="titulohome">Bienvenidos Al Sitio Oficial De Colgados De La Red</h2>
    <h3 class="subhome">Ultimas Noticias</h3>
    <div class="col-3">
        <form class="d-flex buscar right" action="/" method="GET">
            <input class="form-control me-2" type="search" placeholder="Buscar Noticia..." aria-label="Search" name="q"
                {{#if q}} value="{{q}}" {{/if}}>
            <button class="btn btn-secondary" type="submit"><i class="fas fa-search"></i></button>
        </form>
    </div>
    <div class="columnas">
        {{#each novedades}}
        <div class="noticia">
            <div class="efecto left"><img src="{{image_url}}" alt="disco"></div>
            <h3>{{titulo}}</h3>
            <p>{{{cuerpo}}}</p>
        </div>
        {{/each}}
    </div>
    <div style="margin-top: 40px;">
        {{#if is_search}}
        {{#unless novedades.length}}
        <h4 class="alerta incorrecto">No se Encontraron Resultados Para "<strong>{{q}}</strong>"</h4>
        {{/unless}}
        {{/if}}
    </div>
</main>