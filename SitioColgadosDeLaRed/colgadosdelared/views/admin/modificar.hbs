<div class="container mt-5 mx-auto mb-5">
    <div class="row">
        <div class="col-12 col-md-7 col-lg-6 col-xl-6 col-xxl-6 mx-auto listado">
            <h3>Modificar Una Novedad</h3>
            <form action="/admin/novedades/modificar" method="POST" class="formagregar" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <input type="hidden" value="{{novedad.public_id}}" name="public_id">
                <input type="hidden" value="{{novedad.image_url}}" name="image_url">

                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Titulo</label>
                    <input type="text" name="titulo" class="form-control" id="exampleFormControlInput1"
                        placeholder="Ingrese Un TÃ­tulo..." value="{{novedad.titulo}}">
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Cuerpo</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                        placeholder="Ingrese un Cuerpo..." name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Seleccione Una Nueva Imagen</label>
                    <input class="form-control" type="file" id="formFile" value="undefined" name="image">
                </div>
                <div class="mx-auto text-center">
                    <div class="modimg mx-auto"><img class="modimgint" src="{{novedad.image_url}}" alt=""></div>
                </div>
                <div class="col-auto boton">
                    <button type="submit" class="btn inicio mb-3">Modificar Novedad</button>
                </div>
            </form>
            {{#if error}}
            <h4 class="alerta incorrecto">{{messaje}}</h4>
            {{/if}}
        </div>
    </div>
</div>